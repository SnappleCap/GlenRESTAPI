@model IEnumerable<UtilantMVC.Models.Post>

@{
    ViewData["Title"] = "Posts";
}

<div class="container-fluid">
    <div class="row">
        <h2>Posts:</h2>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 my-4">
                <div class="jumbotron">
                    <p class="lead font-weight-bold">@Html.DisplayFor(modelItem => item.title)</p>
                    <hr class="my-4">
                    <p>@Html.DisplayFor(modelItem => item.body)</p>
                </div>
            </div>
        }
    </div>
</div>